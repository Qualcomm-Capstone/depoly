# ===========================================
# Promtail 설정 (envsubst 템플릿)
# ===========================================
# 앱/워커/DB/MQ 인스턴스 공통

server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://${MON_HOST}:3100/loki/api/v1/push

scrape_configs:
  - job_name: docker
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 5s
        filters:
          - name: name
            values:
              - "speedcam-.*"
    relabel_configs:
      - source_labels: ["__meta_docker_container_name"]
        regex: "/(.*)"
        target_label: "container"
      - source_labels: ["__meta_docker_container_name"]
        regex: "/speedcam-(.*)"
        target_label: "service"
    pipeline_stages:
      - regex:
          expression: ".*trace_id=(?P<trace_id>[a-f0-9]+).*"
      - labels:
          trace_id:
